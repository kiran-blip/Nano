<div class="new-activity form-container">
  <div class="logo-title-container">
  <h1>New Activity</h1>

  </div>
  <%= simple_form_for(@activity) do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :tag,
      collection: %w(sport music history art team puzzle tour),
      input_html: { multiple: true, data: {controller: "tom-select"} },
      include_hidden: false
    %>
    <%= f.input :price,  input_html: { value: 0 } %>
    <%= f.input :free, as: :boolean %>
    <%= f.input :location %>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>

    <div class="start-end-container">
      <%= f.input :start, as: :date, html5: true  %>
      <%= f.input :end, as: :date, html5: true %>
    </div>

    <%= f.input :venue %>
    <%= f.input :booking, as: :boolean, label: "Booking required" %>
    <div class="form-actions">
      <%= submit_tag "Create Activity", class: "button-main" %>
    </div>
  <% end %>

</div>
