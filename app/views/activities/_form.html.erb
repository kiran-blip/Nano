
<%= simple_form_for(@activity) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :tag %>
    <%= f.input :price %>
    <%= f.input :image %>
    <%= f.input :start %>
    <%= f.input :end %>
    <%= f.input :location %>
    <%= f.input :free %>
    <%= f.input :venue %>
    <%= f.input :booking %>
    <%= f.association :review %>
    <%= f.association :user %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
